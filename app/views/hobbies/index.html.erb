<h2>My Hobbies</h2> 
<%= link_to 'Add Hobby', new_hobby_path %>
<hr />
<% @hobbies.each do |h| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey lighten-2">
        <div class="card-content white-text">
          <span class="card-title"><%= h.name %></span>
          <hr />
          <p> <%= h.body %> </p>
        </div>
        <div class="card-action teal accent-3">
          <%= link_to "Edit", edit_hobby_path(h), {:style=>'color:#FFFFFF;'} %>
          <%= link_to "Show", hobby_path(h), {:style=>'color:#FFFFFF;'}%>
          <%= link_to "Delete", hobby_path(h), :style=>'color:#FFFFFF;', method: :delete %>
        </div>
      </div>
    </div>
  </div>
   <% end %> 
