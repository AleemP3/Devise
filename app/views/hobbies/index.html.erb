<h2>My Hobbies</h2> 
<%= link_to 'Add Hobby', new_hobby_path %>
<hr />
<% @hobbies.each do |h| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= h.name %></span>
          <hr />
          <p> <%= h.body %> </p>
        </div>
        <div class="card-action">
          <%= link_to "Edit", edit_hobby_path(h)%>
          <%= link_to "Show", hobby_path(h) %>
          <%= link_to "Delete", hobby_path(h), method: :delete%>
        </div>
      </div>
    </div>
  </div>
   <% end %> 
